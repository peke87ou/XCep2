        android:label="@string/app_name" android:name="com.irina.xcep.parse.ParseApplication">
        
        <activity
            android:name=".SplashActivity"
            android:label="@string/app_name"
          	android:theme="@style/CustomThemeNoActionBar"
             >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
         <activity 
            android:name=".LoginActivity"
            android:theme="@style/CustomTheme"
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        
          <activity 
            android:name=".SignupActivity"
            android:theme="@style/CustomTheme"
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity 
            android:name=".MenuActivity" 
            android:theme="@style/CustomTheme"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity 
            android:name=".AddShoppingListActivity" 
            android:theme="@style/CustomTheme"
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
         <activity 
            android:name=".ScanActivity" 
            android:theme="@style/CustomTheme"
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity 
            android:name=".AddProductActivity" 
            android:theme="@style/CustomTheme"
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity 
            android:name=".DetailProduct" 
            android:theme="@style/CustomTheme"
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
        <activity 
            android:name=".AddMarketActivity" 
            android:theme="@style/CustomTheme"
            android:configChanges="keyboardHidden|orientation|screenSize">
        </activity>
         
    </application>

</manifest>
